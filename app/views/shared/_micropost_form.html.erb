<%= form_for(@micropost) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.text_area :content, placeholder: "Compose new micropost...", onKeyDown: "limitText(this.form.micropost_content, 139)" %>
    </div>
    <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>