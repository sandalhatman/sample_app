<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>


        <%=
            #let(:Steve) { User.find_by_email('user@example.com') }
            bob = User.find_by_email('user@example.comn')





            #it { should have_selector('title', text: full_title(:user.name)) }





        %>

        <%= f.label :name %>
        <%= f.text_field :name %>

